<div class="container">

  <!-- Page content -->
  <div class="page-content">

    <!-- Main content -->
    <div class="content-wrapper clear">



      <div class="panel panel-flat">
        <div class="panel-heading">
          <h2>Listing All Playlists</h2>
          <%= link_to 'New',  new_playlist_path, class: "btn btn-primary" %>

        </div>


        <table id="datatable" class="table datatable-basic">
          <thead>
            <tr>
              <th>Name</th>
              <th class="text-center" style="width: 20px;"><i class="icon-arrow-down12"></i></th>
              <th class="text-center" style="width: 20px;"><i class="icon-arrow-down12"></i></th>
              <th class="text-center" style="width: 20px;"><i class="icon-arrow-down12"></i></th>
            </tr>
          </thead>
          <tbody>




            <% if  !@playlists.blank? %>
            <% @playlists.each do |playlist| %>
            <tr>
              <td><%= playlist.title %></td>

              <td>
                <%= link_to 'Show',  playlist_path(playlist) %>
              </td>
              <td>
                <%= link_to 'Edit', edit_playlist_path(playlist) %> 
              </td>
              <td>
               <%= link_to 'Destroy',  playlist_path(playlist),  method: :delete, data: { confirm: 'Are you sure?' } %>   
             </td>

           </tr>
           <% end %>
           <% end %>

         </tbody>
       </table>
     </div>

     <!-- /marketing campaigns -->



   </div>
   <!-- /main content -->

 </div>
 <!-- /page content -->

</div>
<!-- /page container -->

